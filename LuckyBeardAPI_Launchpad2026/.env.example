# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URL=https://localhost:7008

## Connection Strings
ConnectionStrings_DefaultConnection=Server=(localdb)\\mssqllocaldb;Database=luckybeardApiDb;Trusted_Connection=True;TrustServerCertificate=True

## JWT Configuration
# Replace this with a 32-character, random generated string
Jwt_Key=CHANGE_ME_TO_A_LONG_RANDOM_SECRET_KEY

## For debugging, these match your appsettings.json URLs
Jwt_Issuer=https://localhost:7008/
Jwt_Audience=https://localhost:7008/

## Token Lifetime (minutes)
Jwt_TokenVialidityMins=30
